<UserControl x:Class="Chat_App.UserControls.UserChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Name="userChat">

    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
        <Border CornerRadius="50" Width="30" Height="30">
            <Border.Background>
                <ImageBrush ImageSource="{Binding Path=Source,ElementName=userChat}"/>
            </Border.Background>
        </Border>

        <TextBlock Text="{Binding Path=Username,ElementName=userChat}" Margin="10 0 0 0" FontSize="12" FontWeight="SemiBold" Foreground="#37363B" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>