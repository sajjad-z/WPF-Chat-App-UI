<UserControl x:Class="Chat_App.UserControls.ImageLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="imageLogo">

    <Border CornerRadius="50" BorderThickness="2" BorderBrush="White" VerticalAlignment="Center">
        <Ellipse Width="23" Height="23">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding ElementName=imageLogo,Path=Image}" />
            </Ellipse.Fill>
        </Ellipse>
    </Border>

</UserControl>